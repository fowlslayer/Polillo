<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"

>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comunicati Stampa"
        android:id="@+id/buttonComunicati"
        android:textSize="30dp"
        android:gravity="center_vertical|start"
        android:background="@drawable/buttonshape"
        android:layout_above="@+id/buttonEventi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News"
        android:textSize="30dp"
        android:gravity="center_vertical|start"
        android:background="@drawable/buttonshape"
        android:id="@+id/buttonEventi"
        android:layout_above="@+id/buttonLocaliNegozi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:id="@+id/buttonLocaliNegozi"
        android:textSize="30dp"
        android:gravity="center_vertical|start"
        android:background="@drawable/buttonshape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logoMain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logolissone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCronaca"
        android:text="Cronaca"
        android:gravity="center_vertical|start"
        android:background="@drawable/buttonshape"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonComunicati" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout7"
        android:background="@drawable/buttonshape"
        android:layout_above="@+id/buttonCronaca"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout8"
        android:background="@drawable/icon_next"
        android:layout_alignTop="@+id/buttonCronaca"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout9"
        android:background="@drawable/icon_next"
        android:layout_above="@+id/buttonEventi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout10"
        android:background="@drawable/icon_next"
        android:layout_above="@+id/buttonLocaliNegozi"
        android:layout_alignLeft="@+id/relativeLayout9"
        android:layout_alignStart="@+id/relativeLayout9" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout11"
        android:background="@drawable/icon_next"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/relativeLayout10"
        android:layout_alignStart="@+id/relativeLayout10" />


</RelativeLayout>