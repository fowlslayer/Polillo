<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="642dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="126.7dp"
                android:layout_height="35dp"
                android:layout_gravity="right|top" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sport"
                    android:id="@+id/buttonNewsSport"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffffff"
                    android:textColor="@android:color/holo_blue_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="127.7dp"
                android:layout_height="35dp"
                android:layout_gravity="left|top">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cronaca"
                    android:id="@+id/buttonNewsCronaca"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/white"
                    android:textColor="@android:color/holo_blue_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="126.7dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal|top">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Comunicati"
                    android:id="@+id/buttonNewsComunicati"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/white"
                    android:textColor="@android:color/holo_blue_light" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal|top"
                android:background="@android:color/white"
                android:layout_marginTop="35dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:layout_gravity="center"
                    android:background="@drawable/notizia_home_orizzontale" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="436dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/notizia_home_corpo"></FrameLayout>
        </FrameLayout>

    </FrameLayout>
</ScrollView>