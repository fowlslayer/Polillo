<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#ffffffff">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/buttonUnAttivita"
            android:background="@drawable/negozio_abbigliamento"
            android:onClick="buttonOnClick"
            android:gravity="top"
            android:layout_gravity="left|center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_gravity="right|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="MOTTA"
                android:id="@+id/textView42"
                android:textSize="23dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Negozio di vestiti ..."
                android:id="@+id/textView42" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/indirizzoNegozioAbbigliamento"
                android:id="@+id/textView42" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/giorniNegozioAbbigliamento"
                android:id="@+id/textView15" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonNewAttivita"
            android:layout_gravity="center"
            android:background="@drawable/button_aggiungi_attivita" />
    </FrameLayout>

</FrameLayout>
</ScrollView>
