<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
   >


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logoMain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logolissone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNewsCronaca"
        android:text="Notizie"
        android:gravity="center_vertical|start"
        android:background="@drawable/buttonshape"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNewsComunicati"
        android:text="Bacheca Vendite"
        android:gravity="center_vertical|start"
        android:textSize="30dp"
        android:layout_below="@+id/buttonNewsCronaca"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonshape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEventi"
        android:text="Eventi"
        android:gravity="center_vertical|start"
        android:textSize="30dp"
        android:layout_below="@+id/buttonNewsComunicati"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonshape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLocaliNegozi"
        android:text="Locali &amp; Negozi"
        android:gravity="center_vertical|start"
        android:textSize="30dp"

        android:background="@drawable/buttonshape"
        android:layout_below="@+id/buttonEventi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comune_button"
        android:text="Comune"
        android:gravity="center_vertical|start"
        android:textSize="30dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/buttonLocaliNegozi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_toRightOf="@+id/logoMain"
        android:layout_toEndOf="@+id/logoMain"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/logoMain" />

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout"
        android:background="@drawable/buttonshape"
        android:layout_above="@+id/buttonNewsCronaca"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView3" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout2"
        android:background="@drawable/icon_next"
        android:layout_alignTop="@+id/buttonNewsCronaca"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout3"
        android:background="@drawable/icon_next"
        android:layout_above="@+id/buttonEventi"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout4"
        android:background="@drawable/icon_next"
        android:layout_above="@+id/buttonLocaliNegozi"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout5"
        android:background="@drawable/icon_next"
        android:layout_above="@+id/comune_button"
        android:layout_alignLeft="@+id/relativeLayout4"
        android:layout_alignStart="@+id/relativeLayout4" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout6"
        android:background="@drawable/icon_next"
        android:layout_alignBottom="@+id/comune_button"
        android:layout_alignLeft="@+id/relativeLayout5"
        android:layout_alignStart="@+id/relativeLayout5" />


</RelativeLayout>